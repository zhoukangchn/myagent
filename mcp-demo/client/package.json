{
  "name": "mcp-demo-client",
  "version": "1.0.0",
  "description": "MCP Demo Client - 连接 MCP Server 的示例客户端",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:stdio": "node dist/index.js --transport stdio",
    "start:sse": "node dist/index.js --transport sse --url http://localhost:3001/sse",
    "test": "npm run build && node dist/index.js"
  },
  "dependencies": {
    "@anthropic-ai/mcp": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
