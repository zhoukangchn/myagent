{
  "name": "mcp-demo-server",
  "version": "1.0.0",
  "description": "MCP Demo Server with stdio and SSE transports",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:stdio": "node dist/index.js --stdio",
    "start:sse": "node dist/index.js --sse --port 3001",
    "inspect": "npx @anthropic-ai/mcp-inspector node dist/index.js --stdio"
  },
  "dependencies": {
    "@anthropic-ai/mcp": "^1.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
